# Configuration de production pour SmartSupply Health

# Base de donn√©es
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password-here
MONGODB_URI=mongodb://admin:your-secure-password-here@mongodb:27017/smartsupply?authSource=admin

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@smartsupplyhealth.com

# Redis
REDIS_URL=redis://redis:6379

# Frontend
REACT_APP_API_URL=https://api.smartsupplyhealth.com
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# Grafana
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://smartsupplyhealth.com,https://www.smartsupplyhealth.com

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
